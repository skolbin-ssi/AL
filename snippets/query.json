        "body": [
            "query ${1:Id} ${2:MyQuery}",
            "{",
            "\tQueryType = ${3|Normal,API|};",
            "\t",
            "\telements",
            "\t{",
            "\t\tdataitem(${5:DataItemName}; ${4:SourceTableName})",
            "\t\t{",
            "\t\t\tcolumn(${7:ColumnName}; ${6:SourceFieldName})",
            "\t\t\t{",
