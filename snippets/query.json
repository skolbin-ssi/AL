            "\t\t\t\t${11}",
            "\t\t\t}",
            "\t\t}",
            "\t}",
            "\t",
            "\tvar",
            "\t\t${12:myInt}: ${13:Integer};",
            "\t",
            "\ttrigger ${14:OnBeforeOpen}()",
            "\tbegin",
            "\t\t$0",
            "\tend;",
            "}"
